package com.cognizant.memberService.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.cognizant.memberService.entity.Claim;
import com.cognizant.memberService.repository.ClaimRepository;

@Service
public class ClaimService {
	
	@Autowired
	private ClaimRepository claimRepository;
	
	public List<Claim> getAllClaimsWithMemberId(int memberId){
		return claimRepository.findByMember(memberId);
	}
	
}
