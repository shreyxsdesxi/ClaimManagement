package com.cognizant.memberService.proxy;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.cognizant.memberService.entity.MemberClaim;

@FeignClient(name = "policy-service", url = "localhost:8002")
public interface ClaimProxy {
	
	@GetMapping(value = "/policy")
	public List<MemberClaim> retrieveClaims(@PathVariable int memberId);
	
}
