package com.cognizant.claimsService.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.cognizant.claimsService.entity.Claim;
import com.cognizant.claimsService.entity.Member;
import com.cognizant.claimsService.service.ClaimService;
import com.cognizant.claimsService.service.MemberService;

@RestController
@RequestMapping(value = "/claims")
public class ClaimsController {
	
	@Autowired
	private ClaimService claimService;
	
	@GetMapping(value = "/{memberId}")
	public List<Claim> getClaims(@PathVariable int memberId){
		Member member = memberService.findById(memberId);
		List<Claim> allClaimsWithMemberId = claimService.getAllClaimsWithMemberId(member);
		System.out.println(allClaimsWithMemberId);
		return allClaimsWithMemberId;
	}
	
	
	@GetMapping(value = "/test")
	public String test() {
		return "test";
	}
	
}
